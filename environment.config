# Face-Sense Environment Configuration
# Rename this file to .env for your deployment

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
ENVIRONMENT=development
PORT=5000
HOST=0.0.0.0
DEBUG=true
LOG_LEVEL=INFO

# =============================================================================
# CAMERA CONFIGURATION
# =============================================================================
# Camera type: webcam, ip_camera, rtsp, file
CAMERA_TYPE=webcam

# Camera source (for IP cameras, RTSP, or video files)
# Examples:
# - IP Camera: http://192.168.1.100:8080/video
# - RTSP: rtsp://192.168.1.100:554/stream
# - Video file: /path/to/video.mp4
CAMERA_SOURCE=0

# Camera authentication (for IP cameras)
CAMERA_USERNAME=
CAMERA_PASSWORD=

# Camera settings
CAMERA_RESOLUTION=1280x720
CAMERA_FPS=30

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Database type: sqlite, postgresql
DB_TYPE=sqlite

# SQLite configuration (for development)
DB_NAME=attendance_data/attendance.db

# PostgreSQL configuration (for production)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=face_sense_user
DB_PASSWORD=secure_password_123

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Secret key for Flask sessions (generate a strong 256-bit key)
SECRET_KEY=your-256-bit-secret-key-change-this-in-production

# JWT secret for API authentication
JWT_SECRET=your-jwt-secret-key-256-bits-change-this

# Authentication settings
ENABLE_AUTH=false
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
SESSION_TIMEOUT=3600

# =============================================================================
# FACE RECOGNITION CONFIGURATION
# =============================================================================
# Face recognition settings
FACE_DETECTION_MODEL=hog
FACE_ENCODING_MODEL=small
FACE_TOLERANCE=0.6
FACE_DETECTION_SCALE=0.25

# Cooldown settings (seconds between detections for same person)
COOLDOWN_SECONDS=5

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
# System monitoring settings
ENABLE_MONITORING=true
METRICS_RETENTION_HOURS=24
HEALTH_CHECK_INTERVAL=30

# =============================================================================
# PRODUCTION SETTINGS (uncomment and configure for production)
# =============================================================================
# ENVIRONMENT=production
# DEBUG=false
# ENABLE_AUTH=true
# SECRET_KEY=your-production-secret-key-256-bits
# JWT_SECRET=your-production-jwt-secret-256-bits
# ADMIN_PASSWORD=your-secure-admin-password
# DB_TYPE=postgresql
# DB_HOST=your-postgres-host
# DB_NAME=face_sense_prod
# DB_USERNAME=your-db-user
# DB_PASSWORD=your-secure-db-password

# =============================================================================
# CLOUD DEPLOYMENT SETTINGS (for Docker/Kubernetes)
# =============================================================================
# Uncomment and configure for cloud deployment
# CAMERA_TYPE=ip_camera
# CAMERA_SOURCE=rtsp://your-camera-ip:554/stream
# CAMERA_USERNAME=your-camera-username
# CAMERA_PASSWORD=your-camera-password
# DB_HOST=postgres
# DB_NAME=face_sense
# DB_USERNAME=postgres
# DB_PASSWORD=postgres

# =============================================================================
# SSL/TLS CONFIGURATION (for HTTPS)
# =============================================================================
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem
# FORCE_HTTPS=false

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
# Backup settings
BACKUP_ENABLED=false
BACKUP_INTERVAL=24
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=
BACKUP_S3_ACCESS_KEY=
BACKUP_S3_SECRET_KEY=

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log file settings
LOG_FILE=logs/face_sense.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
# Performance tuning
MAX_WORKERS=4
WORKER_TIMEOUT=30
KEEPALIVE_TIMEOUT=2
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=100

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================
# Network settings
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
CORS_ORIGINS=*
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features
ENABLE_ATTENDANCE_EXPORT=true
ENABLE_REAL_TIME_UPDATES=true
ENABLE_FACE_ENCODING_CACHE=true
ENABLE_PERFORMANCE_METRICS=true
ENABLE_ERROR_REPORTING=true

# =============================================================================
# INTEGRATION SETTINGS
# =============================================================================
# External service integrations
ENABLE_EMAIL_NOTIFICATIONS=false
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=

# Webhook settings
ENABLE_WEBHOOKS=false
WEBHOOK_URL=
WEBHOOK_SECRET=

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Development-specific settings
ENABLE_DEBUG_TOOLBAR=false
ENABLE_PROFILER=false
MOCK_CAMERA=false
MOCK_DATABASE=false
SKIP_FACE_DETECTION=false

# =============================================================================
# NOTES
# =============================================================================
# 1. Change all default passwords and secrets in production
# 2. Use strong, unique passwords (minimum 12 characters)
# 3. Enable authentication in production (ENABLE_AUTH=true)
# 4. Use PostgreSQL for production deployments
# 5. Configure SSL/TLS for HTTPS in production
# 6. Set up proper backup procedures
# 7. Monitor system resources and logs regularly
# 8. Keep dependencies updated for security
